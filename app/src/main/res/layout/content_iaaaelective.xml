<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_iaaaelective2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.netlab.vc.coursehelper.IAAAElective"
    tools:showIn="@layout/activity_iaaaelective">








    <ImageView
        android:layout_width="160dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/bg_edittext"
        android:id="@+id/validcode_img"
        android:layout_alignParentTop="true"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/validcode_img"
        android:id="@+id/user_validcode"/>
    <Button
        android:text="验证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_validcode"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:id="@+id/button_check"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:id="@+id/web_content"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:layout_toEndOf="@id/button_check"
        android:layout_below="@id/user_validcode"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_check"
        android:id="@+id/elective_list"/>

</RelativeLayout>

